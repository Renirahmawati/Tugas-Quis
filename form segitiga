import newpackage.perhitungan.segitiga;
public class new_segitiga extends javax.swing.JPanel {
public new_segitiga() {
        initComponents();
    }
private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    segitiga a = new segitiga();
    double alas = Double.parseDouble(jTextField1.getText());
    double tinggi = Double.parseDouble(jTextField2.getText());

    double hasil;
    hasil = a.Luassegitiga(alas,tinggi);
    jLabel3.setText("hasil = "+hasil);
 }                                                                                
